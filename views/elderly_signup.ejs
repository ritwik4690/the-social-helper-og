<%- include('partials/header') %>


<!-- Creating a SIGN Up Form -->
<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-plus"></i> Register
        </h1>
        <%- include ('partials/messages') %>
        <h1>FOR ELDERLY</h1>
        <form action="/elderly_signup" method="POST" class="py-2">
          <!-- Name of the user -->
          <div class="form-group py-3">
            <label for="fullName" class="py-2">Full Name</label>
            <input
              type="text"
              id="fullName"
              name="fullName"
              class="form-control"
              placeholder="Enter Name"
            />
            <span id="cmmessage"></span>
          </div>
          <!-- Age of the user -->
          <div class="form-group py-3">
            <label for="age" class="py-2">Age</label>
            <input
              type="number"
              id="age"
              name="age"
              class="form-control"
              placeholder="Enter Age"
              min="50"
              max="120"
              />
              
              <span id="agemessage"></span>

          </div>
          <!-- Gender of the user -->
          <div class="form-group py-3">
            <label for="gender" class="py-2">Select gender:</label>
            <select  style="background-color:#90ee90;" id="gender" name="gender" class="form-control">
                <option value="male">Male</option>
                <option value="female">Female</option>
                <option value="NA">Do not wish to specify</option>
            </select>
          </div>

          <!-- Phone number of the user -->
          <div class="form-group py-3">
            <label for="phoneNumber" class="py-2">Phone number</label>
            <input
              type="tel"
              id="phoneNumber"
              name="phoneNumber"
              class="form-control"
              placeholder="Enter Phone Number"
            />
            <span id="messagecnum"></span>
          </div>
          <!-- Password of the user -->
          <div class="form-group py-3">
            <label for="password" class="py-2">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Create Password"
            />
          </div>
          <span id="messagepwdc"></span>
          <!--Confirm Password of the user -->
          <div class="form-group py-3">
            <label for="confirmPassword" class="py-2">Confirm Password</label>
            <input
              type="password"
              id="confirmPassword"
              name="confirmPassword"
              class="form-control"
              placeholder="Confirm Password"
            />
            <span id="messagecpwdc"></span>
          </div>

          <!-- Taking the Location of the user -->
          <input type="hidden" id="longitude" name="longitude" value="">
          <input type="hidden" id="latitude" name="latitude" value="">

          <!-- Register button -->
          <button type="submit" id="submitf" class="btn btn-primary btn-block">
            Register
          </button>
        </form>
        <p class="lead mt-4">Have An Account? <a href="/elderly_login">Login</a></p>
      </div>
    </div>
  </div>




