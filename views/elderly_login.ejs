<%- include('partials/header') %>


<!-- Creating a login Form -->
<h1>LOG-IN FOR ELDERLY </h1>
<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Login</h1>
        <%- include('partials/messages') %>
        <h1>FOR ELDERLY</h1>
        <form action="/elderly_login" method="POST">
          <div class="form-group py-3">

            <label for="phoneNumber" class="py-2">Phone Number</label>
            <input
              type="number"
              id="phoneNumber"
              name="phoneNumber"
              class="form-control"
              placeholder="Enter Phone Number"
            />
          </div>
          <div class="form-group">
            <label for="password" class="py-2">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Password"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block my-2">Login</button>
        </form>
        <p class="lead mt-4">
          No Account? <a href="/elderly_signup">Register</a>
        </p>
      </div>
    </div>
  </div>


<%- include('partials/footer') %>